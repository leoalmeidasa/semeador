<%= form_with model: @transaction, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :title, "Título", class: "block text-sm font-semibold" %>
    <%= f.text_field :title, class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= f.label :amount, "Valor (R$)", class: "block text-sm font-semibold" %>
    <%= f.number_field :amount, step: 0.01, class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= f.label :date, "Data", class: "block text-sm font-semibold" %>
    <%= f.date_field :date, class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= f.label :transaction_type, "Tipo", class: "block text-sm font-semibold" %>
    <%= f.select :transaction_type, [["Entrada", "income"], ["Saída", "expense"]], {}, class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= f.label :category_id, "Categoria", class: "block text-sm font-semibold" %>
    <%= f.collection_select :category_id, Category.for_user(current_user), :id, :name, prompt: "Selecione uma categoria" %>
  </div>

  <div>
    <%= f.submit class: "btn btn-success btn-lg fw-semibold rounded-2 py-2",
                 style: "background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%); border: none;" %>
  </div>
<% end %>
